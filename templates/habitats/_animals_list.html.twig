{# habitats/_animals_list.html.twig #}
{% if animals|length > 0 %}
    {% for animal in animals %}
        <div class="col p-3">
            <div class="card bg-light text-black">
                <img src="data:{{ animal.imageType }};base64,{{ animal.imageData }}" class="card-img-top" alt="{{ animal.name }}">
                <div class="card-body">
                    <h5 class="card-title">{{ animal.name }}</h5>
                </div>
            </div>
        </div>
    {% endfor %}
{% else %}
    <div class="col-12"><p class="text-center">No animals found</p></div>
{% endif %}
